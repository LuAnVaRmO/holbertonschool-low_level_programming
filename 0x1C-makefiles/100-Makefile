CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic
SRC=main.c holberton.c
OBJ=$(SRC:.c=.o)
NAME=holberton
RM=rm -f
ifneq ("$(wildcard m.h)", "")
all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
.PHONY: all clean oclean fclean re
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean all
endif